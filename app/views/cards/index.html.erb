
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tr>
        <th>Оригинальный текст</th>
        <th>Перевод</th>
        <th>Дата пересмотра</th>
        <th>Удалить</th>
        <th>Изменить</th>
      </tr>
      <% @cards.each do |card| %>
        <tr>
          <td><%= card.original_text %></td>
          <td><%= card.translated_text %></td>
          <td><%= card.review_date.strftime('%d/%m/%Y') %></td>
          <td><%= link_to 'Удалить', card_path(card),
              method: :delete,
              data: { confirm: 'Уверены?' } %></td>
          <td><%= link_to 'Изменить', edit_card_path(card) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
