<% if flash[:notice] %>
	<div class='alert alert-info alert-dimissible'>
		<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
		<%= flash[:notice] %>
	</div>
<% end %>
<%= @status %>
<% if @card %>
<div class="row">
	<div class="col-md-4">
 		<%= image_tag @card.image_url(:thumb) if @card.image? %>
	</div>
	<div class="col-md-2">
 		<h3><%= @card.translated_text%></h3>
	</div>
	<div class="col-md-4">
	 	<h3>
	 	<%= render 'form' %>
	 	</h3>
 	</div>
</div>
<% else %>
	<h3>На сегодня карточек нет!</h3>
<% end %>
